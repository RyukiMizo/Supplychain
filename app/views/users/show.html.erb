<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= image_tag @user.thumbnail.url if @user.thumbnail? %>
        <%= @user.name %>
      </h1>
      <div class="introduction">
        <h1>自己紹介</h1>
        <p><%= @user.introduction.content %></p>
        <% if @user ==current_user %>
        <%= link_to '自己紹介を編集', "/introduction/#{@user.id}" %>
        <% end %>
      </div>
      
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>投稿数<%= @user.microposts.count %></h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>