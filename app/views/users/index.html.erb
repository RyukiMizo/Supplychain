<% provide(:title, '全てのユーザー') %>

<h1>全てのユーザー</h1>

<%= will_paginate %>

<ul class="users">
    <% @users.each do |user| %>
     <li>
         <%= image_tag user.image.url if user.image? %>
         <%= link_to user.name, user %>
         <% if current_user.admin? && !current_user?(user) %>
         | <%= link_to "delete", user, method: :delete,
               date: {confirm: "本当に削除してもよろしいですか？"} %>
         <% end %>
     </li>
    <% end %>
</ul>

<%= will_paginate %>