<li id="micropost-<%= micropost.id %>">
    <%= image_tag micropost.photo.url if micropost.photo?%>
    <span class="content">
    <%= link_to "#{micropost.product}の詳細はこちら", "/postspage/#{micropost.id}" %>
    </span>
    <span class="timestamp">
        <%= time_ago_in_words(micropost.created_at) %>
        <% if current_user?(micropost.user) %>
         <%= link_to '削除', "/postpage/#{micropost.id}", method: :delete,
                      data: {confirm: "本当に削除してもよろしいですか？"} %>
        <% end %>
         
    </span>
</li>