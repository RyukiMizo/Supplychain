<%= nested_form_for(@chain, url: "/chains/#{params[:id]}") do |f| %>

<% if @chain.errors.any? %>
  <div id="error_explanation">
    <ul>
      <li>内容を入力してください</li>
    </ul>
  </div>
    <% end %>
  <div class="field">
    <%= f.label :contact, "投稿者へのメッセージ" %><br>
    <%= f.text_area :contact, class: 'contact-area' %><br><br>
  </div>
  
        <table class="table table-striped table-bordered table-hover", id="table-chain">

            <tr>
               <th>場所</th>
               <th>時期</th>
               <th>詳細情報</th>
               <th>Action</th>
            </tr>
              <%= f.fields_for :deepchains, :wrapper => false do |q| %>
              <tr class="fields">
                <td><%= q.select :place, Block.places.keys, {},
                                     class: 'form-control' %></td>
                <td><%= q.date_select :date, class: 'form-control' %></td>
                <td><%= q.text_area   :information, placeholder: "入力してください",
                                      class: 'form-control' %>
                <%= q.file_field :chainpicture, accept: 'image/jpeg,image/gif,image/png' %></td>
                <td><%= q.link_to_remove '削除', class: 'btn btn-danger', role: 'button' %></td>
              </tr>
       <% end %>
      </table>
      <%= f.link_to_add "追加", :deepchains, :data => { :target => "#table-chain" }, 
               class: 'btn btn-primary add-block-btn', role: 'button' %><br>
               
  <div class="actions">
    <%= f.submit class: "btn btn-success submit"%>
  </div>     
<% end %>




