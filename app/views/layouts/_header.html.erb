<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Branding", root_path, id: "logo" %>
    <nav>
      
      <% if logged_in? %>
      <%= link_to  "投稿する", root_path, class: "btn btn-success postf", role: 'button'%>
      <% end %>
      <ul class="nav navbar-nav navbar-right">
        
        <% if not_logged_in? %>
        <li><%= link_to "ホーム", root_path %></li>
        <% end %>
        
        <li><%= link_to "ヘルプ", help_path %></li>
        <% if logged_in? %>
        
          <li><%= link_to "ユーザ一覧", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              アカウント <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "プロフィール", current_user %></li>
              <li><%= link_to "設定", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>